  <p id="goaltext">no tv</p>
  <button onclick="markdone()">yes done</button>
  <button onclick="marknotdone()">no not done</button>
  <p id="status"></p>
  <script> 
    function markdone() {
      document.getElementById("status").innerText = "Goal completed!";
    }
    function marknotdone() {
      document.getElementById("status").innerText = "Goal incomplete";
    }
  </script>
</body>
